<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">

    </RelativeLayout>

    <Button
        android:id="@+id/btn_relative_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginStart="29dp"
        android:layout_marginTop="103dp"
        android:layout_toEndOf="@+id/relativeLayout"
        android:text="第一个Button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_relative_1"


        android:layout_alignBottom="@+id/btn_relative_1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="52dp"
        android:text="第二个Button"
        android:id="@+id/btn_relative_2"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_relative_1"


        android:layout_below="@+id/btn_relative_1"
        android:layout_marginTop="100dp"
        android:text="第三个button"
        android:id="@+id/btn_relative_3"


        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignBaseline="@+id/btn_relative_3"
        android:layout_alignBottom="@+id/btn_relative_3"
        android:layout_alignStart="@+id/btn_relative_2"
        android:id="@+id/btn_relative_4"
        android:text="第四个button" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:text="返回"
        android:id="@+id/btn_return_relative"
        />


</RelativeLayout>
